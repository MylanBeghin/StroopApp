<UserControl x:Class="StroopApp.Views.Configuration.Profile.SwitchSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:StroopApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="220"
             d:DesignWidth="390">
    <Border Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
            CornerRadius="0,0,8,8"
            Padding="16"
            BorderThickness="0.5"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
        <ui:SimpleStackPanel Orientation="Vertical"
                             Spacing="8">
            <!-- Ligne Carré (%) | ■ | Slider | ● | Rond (%) -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="32" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!-- Carre (%) -->
                    <ColumnDefinition Width="28" />
                    <!-- Icone Carre -->
                    <ColumnDefinition Width="*" />
                    <!-- Slider -->
                    <ColumnDefinition Width="28" />
                    <!-- Icone Rond -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Rond (%) -->
                </Grid.ColumnDefinitions>
                <!-- Labels des pourcentages -->
                <ui:SimpleStackPanel Orientation="Horizontal"
                                     VerticalAlignment="Center"
                                     Spacing="4"
                                     ToolTip="{Binding Source={StaticResource Loc}, Path=[Tooltip_CueSquareResponse]}"
                                     ToolTipService.Placement="Top"
                                     ToolTipService.InitialShowDelay="100"
                                     Margin="0,0,0,8">
                    <TextBlock Text="{Binding Source={StaticResource Loc}, Path=[Label_SquarePercentage]}"
                               HorizontalAlignment="Left" />
                    <TextBlock Text=""
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               Margin="0,4,0,0" />
                </ui:SimpleStackPanel>
                <ui:SimpleStackPanel Orientation="Horizontal"
                                     VerticalAlignment="Center"
                                     Spacing="4"
                                     ToolTip="{Binding Source={StaticResource Loc}, Path=[Tooltip_CueCircleResponse]}"
                                     ToolTipService.Placement="Top"
                                     ToolTipService.InitialShowDelay="100"
                                     Margin="0,0,0,8"
                                     Grid.Row="0"
                                     Grid.Column="4">
                    <TextBlock Text="{Binding Source={StaticResource Loc}, Path=[Label_CirclePercentage]}"
                               HorizontalAlignment="Left"
                               Grid.Row="0"
                               Grid.Column="4" />
                    <TextBlock Text=""
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                               Margin="0,4,0,0" />
                </ui:SimpleStackPanel>
                <!-- NumberBox, symboles et slider -->
                <ui:NumberBox Value="{Binding SquarePercent, Mode=TwoWay}"
                              Minimum="0"
                              Maximum="100"
                              SpinButtonPlacementMode="Inline"
                              Grid.Row="1"
                              Grid.Column="0"
                              Margin="0,0,4,0" />
                <TextBlock Text="■"
                           FontSize="22"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Grid.Row="1"
                           Grid.Column="1" />
                <Slider Minimum="0"
                        Maximum="100"
                        Value="{Binding DominantPercent, Mode=TwoWay}"
                        SmallChange="1"
                        LargeChange="5"
                        TickFrequency="5"
                        IsSnapToTickEnabled="True"
                        Grid.Row="1"
                        Grid.Column="2"
                        Height="28"
                        VerticalAlignment="Center" />
                <TextBlock Text="●"
                           FontSize="42"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Grid.Row="1"
                           Grid.Column="3"
                           Padding="0,0,0,8"/>
                <ui:NumberBox Value="{Binding CirclePercent, Mode=TwoWay}"
                              Minimum="0"
                              Maximum="100"
                              SpinButtonPlacementMode="Inline"
                              Grid.Row="1"
                              Grid.Column="4"
                              Margin="4,0,0,0" />
            </Grid>
            <TextBlock FontSize="12">
    <Run Text="{Binding Source={StaticResource Loc}, Path=[Label_PublicationPrefix], Mode=OneWay}" />
    <Hyperlink NavigateUri="https://www.sciencedirect.com/science/article/pii/S1469029221001515"
                RequestNavigate="Hyperlink_RequestNavigate">
        <Run Text="{Binding Source={StaticResource Loc}, Path=[Label_Year2021], Mode=OneWay}" />
    </Hyperlink>
    <Run Text="," />
    <Hyperlink NavigateUri="https://www.frontiersin.org/journals/psychology/articles/10.3389/fpsyg.2022.998393/full"
                RequestNavigate="Hyperlink_RequestNavigate">
        <Run Text="{Binding Source={StaticResource Loc}, Path=[Label_Year2022], Mode=OneWay}" />
    </Hyperlink></TextBlock>
            <!-- Pourcentage de switch -->
            <Grid Margin="0,8,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="0.3*" />
                </Grid.ColumnDefinitions>
                <Slider ui:ControlHelper.Header="{Binding Source={StaticResource Loc}, Path=[Header_Switch] }"
                        Minimum="0"
                        Maximum="100"
                        LargeChange="5"
                        SmallChange="1"
                        Value="{Binding SwitchPercent, Mode=TwoWay}"
                        Grid.Column="0" />
                <ui:NumberBox Header=" "
                              Value="{Binding SwitchPercent, Mode=TwoWay}"
                              Minimum="0"
                              Maximum="100"
                              SpinButtonPlacementMode="Inline"
                              Grid.Column="2" />
            </Grid>
            <ui:SimpleStackPanel Spacing="4">
                <TextBox Text="{Binding SwitchPreview, Mode=OneWay}"
                         Style="{StaticResource ModernReadOnlyTextBoxStyle}"
                         ui:ControlHelper.Header="{Binding Source={StaticResource Loc}, Path=[Label_Overview]}"
                         Margin="0"/>
                <TextBlock Text="{Binding Source={StaticResource Loc}, Path=[Description_PreviewIntroduction]}" FontSize="12" TextWrapping="Wrap" />
            </ui:SimpleStackPanel>
        </ui:SimpleStackPanel>
    </Border>
</UserControl>

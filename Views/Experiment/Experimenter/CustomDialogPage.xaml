<Page x:Class="StroopApp.Views.Experiment.Experimenter.CustomDialogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Background="#80000000">
        <Border Background="White"
                Padding="20"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Fin de l'expérience"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />
                <TextBlock Text="Que voulez-vous faire maintenant ?"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Relancer"
                            Click="OnRestartClicked"
                            Margin="0,0,5,0" />
                    <Button Content="Nouvelle expérience"
                            Click="OnNewExperimentClicked"
                            Margin="0,0,5,0" />
                    <Button Content="Quitter"
                            Click="OnQuitClicked" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>

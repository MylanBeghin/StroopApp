<Page x:Class="StroopApp.Views.Experiment.Experimenter.EndExperimentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:models="clr-namespace:StroopApp.Models">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="0.4*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                CornerRadius="8"
                Padding="16"
                BorderThickness="0.5"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="Bloc terminé"
                           Style="{DynamicResource TitleTextBlockStyle}"
                           VerticalAlignment="Center" />
                <ui:SimpleStackPanel Grid.Column="1"
                                     Orientation="Horizontal"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Center"
                                     Spacing="10">
                    <TextBlock Text="{Binding CurrentDay}"
                               Style="{DynamicResource CaptionTextBlockStyle}" />
                    <TextBlock Text="{Binding CurrentTime}"
                               Style="{DynamicResource CaptionTextBlockStyle}" />
                </ui:SimpleStackPanel>
            </Grid>
        </Border>
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Blocks}">
            <ListView.View>
                <GridView>
                    <!-- première colonne : numéro de bloc -->
                    <GridViewColumn Header=""
                                    DisplayMemberBinding="{Binding BlockNumber, StringFormat='Bloc {0}'}" />
                    <!-- total essais -->
                    <GridViewColumn Header="Essais"
                                    DisplayMemberBinding="{Binding TotalTrials}" />
                    <!-- précision en % -->
                    <GridViewColumn Header="Précision"
                                    DisplayMemberBinding="{Binding Accuracy, StringFormat=' {0} %'}" />
                    <!-- temps moyen -->
                    <GridViewColumn Header="Temps moyen"
                                    DisplayMemberBinding="{Binding ResponseTimeMean, StringFormat=' {0} ms'}" />
                    <!-- type de Stroop -->
                    <GridViewColumn Header="Type Stroop"
                                    DisplayMemberBinding="{Binding StroopType}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>

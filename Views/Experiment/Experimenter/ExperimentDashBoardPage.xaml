<Page x:Class="StroopApp.Views.ExperimentDashBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ExperimentDashBoardPage">
    <Grid x:Name="MainGrid" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Tableau de bord de l'expérience en cours"
                   Style="{DynamicResource HeaderTextBlockStyle}"
                   HorizontalAlignment="Left" Margin="0,0,0,12"/>
        <ListView Grid.Row="2" ItemsSource="{Binding TrialRecords}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Trial Number" DisplayMemberBinding="{Binding TrialNumber}" Width="120"/>
                    <GridViewColumn Header="Reaction Time (ms)" DisplayMemberBinding="{Binding ReactionTime}" Width="180"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>

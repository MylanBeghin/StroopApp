<UserControl x:Class="StroopApp.Views.ProfileManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:StroopApp.ViewModels"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Height="Auto" Width="Auto">
    <Grid Margin="10">
        <!-- Définition de 6 colonnes égales -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Zone de sélection : Utilisation d'un ui:SimpleStackPanel pour le label et le ComboBox -->
        <ui:SimpleStackPanel Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical" Spacing="5">
            <TextBlock Text="Sélectionnez un profil" />
            <ComboBox ItemsSource="{Binding Profiles}" 
                SelectedItem="{Binding CurrentProfile, Mode=TwoWay}"
                DisplayMemberPath="ProfileName"
                Margin="0,0,0,20"/>
        </ui:SimpleStackPanel>

        <!-- Bouton "Créer" dans la 4e colonne (1/6 de la largeur) -->
        <Button Grid.Column="3" Content="Créer" 
            Command="{Binding CreateProfileCommand}" 
            HorizontalAlignment="Center" Margin="5" />

        <!-- Bouton "Modifier" dans la 5e colonne (1/6 de la largeur) -->
        <Button Grid.Column="4" Content="Modifier" 
            Command="{Binding ModifyProfileCommand}" 
            HorizontalAlignment="Center" Margin="5" />

        <!-- Bouton "Supprimer" dans la 6e colonne (1/6 de la largeur) -->
        <Button Grid.Column="5" Content="Supprimer" 
            Command="{Binding DeleteProfileCommand}" 
            HorizontalAlignment="Center" Margin="5" />
    </Grid>
</UserControl>
